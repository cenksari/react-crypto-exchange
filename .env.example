# Application Configuration
VITE_APP_NAME=Crypto Exchange
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# API Configuration
VITE_API_BASE_URL=https://api.cryptoexchange.com
VITE_WS_BASE_URL=wss://ws.cryptoexchange.com

# Authentication
VITE_JWT_SECRET=your_jwt_secret_here
VITE_REFRESH_TOKEN_EXPIRY=7d
VITE_ACCESS_TOKEN_EXPIRY=15m

# Feature Flags
VITE_ENABLE_2FA=true
VITE_ENABLE_KYC=true
VITE_ENABLE_TRADING=true

# Third-party Services
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Security
VITE_CSP_NONCE=your_csp_nonce_here
VITE_CSRF_TOKEN=your_csrf_token_here

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=3600000

# Development
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
